func one(arg: int) -> int {
	return arg + 1;
}

func two(a: int, b: int) -> int {
	let local: int = one(a);

	return one(b) + local;
}

func recursive(a: int, b: int) -> int {
	if (a == 0) return b;
	
	b = b + 2;
	a = a - 1;
	
	return recursive(a, b);
}

func main() -> int {
	let bla: int = two(1, 2); // 5

	let tmp: int = one(bla);
	
	return recursive(one(bla), 0); // 12
}
